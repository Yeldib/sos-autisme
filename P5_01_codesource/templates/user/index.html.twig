{% extends 'base.html.twig' %}

{% block title %}Page du profil de {{ proUser.fullName }}{% endblock %}

{% block body %}

    <div class="container mt-5">
    {% set u = proUser %}
        <div class="row align-items-center">

            <div class="col-3 text-center mb-3">
                {% if u.profilePicture %}
                    <img src="{{ u.profilePicture }}" class="avatar mb-3" alt="Photo de {{ u.fullName }}">
                {% else %}
                    <img src="http://placehold.it/128x128" class="avatar mb-3" alt="Photo de {{ u.fullName }}">
                {% endif %}
                <br>
                <span class="badge badge-primary">{{ u.jobCategory }}</span>
            </div>

            <div class="col-9">
                <h1>{{ u.fullName }}</h1>
                {% if proUser is same as(app.user) %}
                    <div class="mt-3">
                        <a href="{{ path('account_profile') }}" class="btn btn-info btn-sm mr-2 mb-2">Modifier mes informations</a>
                        <a href="{{ path('account_password') }}" class="btn btn-primary btn-sm mb-2">Modifier mon mot de passe</a>
                    </div>
                {% endif %}
            </div>

        </div>
                {% if u.description %}
                    {{ u.description | raw }}
                {% else %}
                    <div class="alert alert-warning">
                        <p><strong>{{ u.fullName }}</strong> n'a pas encore de déscription sur le site.</p>
                    </div>   
                {% endif %}
                <hr>
                <h2>Coordonnées du professionnel</h2>
                {{ u.address }}
                {{ u.postalCode }}
                {{ u.city }} <br>
                {{ u.email }} <br>
                {{ u.phoneNumber }}
    </div>

{% endblock %}
