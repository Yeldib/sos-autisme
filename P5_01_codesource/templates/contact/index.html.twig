{% extends 'base.html.twig' %}

{% block title %}Formuaire de contact
{% endblock %}

{% block body %}
	<div class="container-fluid mt-4" id="bloc-contact-sos-aut">
		<h1 class="my-5 text-center">Contactez-nous</h1>
        <hr>
		<div class="col">
			{{ form_start(form)}}
			<div class="form-group">
				<div class="col-10 mx-auto">
					<i class="fa fa-user bigicon"></i>
					{{ form_widget(form.lastName|e)}}
				</div>
			</div>
			<div class="form-group">
				<div class="col-10 mx-auto">
					<i class="fa fa-user bigicon"></i>
					{{ form_widget(form.firstName|e)}}
				</div>
			</div>
			<div class="form-group">
				<div class="col-10 mx-auto">
					<i class="fa fa-phone-square bigicon"></i>
					{{ form_widget(form.phone|e)}}
				</div>
			</div>
			<div class="form-group">
				<div class="col-10 mx-auto">
					<i class="fa fa-envelope-o bigicon"></i>
					{{ form_widget(form.email|e)}}
				</div>
			</div>
			<div class="form-group">
				<div class="col-10 mx-auto">
					<i class="fa fa-pencil-square-o bigicon"></i>
					{{ form_widget(form.message|e)}}
				</div>
			</div>
            <div class="col-10 mx-auto">
                <button type="submit" class="btn btn-success btn-md rounded">
                    <i class="fas fa-check"></i>
                    Envoyez votre message
                </button>
            </div>
			{{ form_end(form)}}

		</div>
	</div>
{% endblock %}
