{% extends 'admin/base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row mb">
            <div class="col mt-5 ml-3">
                <div class="card bg-primary text-white mb-3 text-center rounded">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                               <i class="fas fa-users fa-3x"></i> 
                            </div>
                            <div class="col-8">
                                <h5 class="card-title">{{ stats.users }} Utilisateurs</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col mt-5">
                <div class="card text-white bg-dark mb-3 text-center rounded">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-comments fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h5 class="card-title">{{ stats.comments }} avis</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col mt-5 mr-3">
                <div class="card text-white bg-warning mb-3 text-center rounded">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-4">
                                <i class="fas fa-users fa-3x"></i>
                            </div>
                            <div class="col-8">
                                <h5 class="card-title">{{ stats.proUsers }} professionnels</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col">
                <div class="alert alert-success rounded">
                    <h4 class="alert-heading my-3"><i class="fas fa-arrow-up"></i>Professionnels les mieux notés</h4>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Métier</th>
                                <th>Nom / Prénom</th>
                                <th>Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for proUser in bestProUsers %}
                            <tr>
                                <td>{{ proUser.jobCategory }}</td>
                                <td>
                                    <img src="{{ proUser.picture }}" alt="" class="avatar avatar-micro">
                                    {{ proUser.lastName }} {{ proUser.firstName }}
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-dark rounded">
                                        {{ proUser.note | number_format(1, ",", " " ) }}
                                    </span>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col">
                <div class="alert alert-danger rounded">
                    <h4 class="alert-heading my-3"><i class="fas fa-arrow-down"></i>Professionnels les moins bien notés</h4>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Métier</th>
                                <th>Nom / Prénom</th>
                                <th>Moyenne</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for proUser in worstProUsers %}
                            <tr>
                                <td>{{ proUser.jobCategory }}</td>
                                <td>
                                    <img src="{{ proUser.picture }}" alt="" class="avatar avatar-micro">
                                    {{ proUser.lastName }} {{ proUser.firstName }}
                                </td>
                                <td class="text-center">
                                    <span class="badge badge-dark rounded">
                                        {{ proUser.note | number_format(1, ",", " " ) }}
                                    </span>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
