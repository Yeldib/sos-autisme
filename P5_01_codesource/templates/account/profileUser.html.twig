{% extends 'base.html.twig' %}

{% block title %}Modification du profil utilisateur{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="my-5 text-center">Modification du profil</h1>

        {{form_start(form)}}
            <div class="row">
                <div class="col">
                    <div class="alert alert-light">
                        <h2 class="alert-heading h4">Informations générales</h2>
                        <hr>
                        {{ form_row(form.lastName) }}
                        {{ form_row(form.firstName) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.picture) }}
                    </div>
                </div>
                <div class="col">
                    <div class="alert alert-light">
                        <h2 class="alert-heading h4">Détails sur vous</h2>
                        <hr>
                        {{ form_row(form.description) }}

                        <hr>
                        <p>Vous êtes sur le point de sauvegarder vos modifications</p>
                        <button type="submit" class="btn btn-success btn-md">
                            <i class="fa fa-check"></i>
                            Valider vos modifications
                        </button>
                    </div>
                </div>
            </div>
    
        {{form_end(form)}}
    </div>

{% endblock %}