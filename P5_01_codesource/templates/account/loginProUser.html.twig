{% extends 'base.html.twig' %}

{% block title %}Connexion au site pour un professionnel{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6">
                <div class="bg-light py-3 px-3 mt-5">
                <h4>Connexion compte professionnel</h4>

                    {% if hasError %}
                        <div class="alert alert-danger">Email ou mot de passe invalide</div>               
                    {% endif %}

                    <form action="{{ path('account_login_pro') }}" method="post">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" name="_username" id="email" class="form-control" placeholder="Votre adresse email" required value="{{ username }}">    
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de passe" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Connexion</button>
                        </div>
                    </form>             
                </div>
            </div>
        </div>
    </div>
{% endblock %}
