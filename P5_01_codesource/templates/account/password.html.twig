{% extends 'base.html.twig' %}

{% block title %}Modification de mot de passe{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="my-5 text-center">Modification du mot de passe</h1>
        <div class="row">
            <div class="col-md-6 mx-auto">
                {{form_start(form)}}
                
                {{form_widget(form)}}

                <button type="submit" class="btn btn-success btn-md  rounded">
                    <i class="fas fa-check"></i>
                    Modifier votre mot de passe
                </button>
            </div>
        </div>
        {{form_end(form)}}
    </div>

{% endblock %}